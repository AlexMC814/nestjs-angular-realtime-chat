{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "attach",
            "name": "Debug: nestjs realtime chat",
            "remoteRoot": "/usr/src/app",
            "localRoot": "${workspaceFolder}/api",
            // "protocol": "inspector",
            "port": 9229,
            "restart": true,
            "trace": true,
            "address": "0.0.0.0",
            "skipFiles": [
                "<node_internals>/**",
                "<node_modules>/**"
            ],
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ],
            // "resolveSourceMapLocations": [
            //     "${workspaceFolder}/**",
            //     "!**/node_modules/**"
            // ]
        }
    ]
}